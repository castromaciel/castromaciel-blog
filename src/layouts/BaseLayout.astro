---
import Themes from 'astro-themes';
import MetaTags from '~/core/MetaTags.astro';
import Scripts from '~/core/Scripts.astro';
import SocialLinks from '~/partials/widgets/SocialLinks.astro';
import '~/styles/layout.scss';

const meta = Astro.props;
const { path, lang = 'en' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    
    <Themes />
    <MetaTags {...meta} />

  </head>
  <body>

    <slot />

    <SocialLinks />
    <Scripts />
  </body>
</html>

<style lang='scss'>
  @import '~/styles/layout.scss';

</style>
